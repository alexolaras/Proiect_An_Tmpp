@model List<Proiect_An.Models.Room>
@{
    ViewData["Title"] = "Index";
}
<h3>Index</h3>

<table class="table">
    <thead>
        <tr>
            <th>Type</th>
            <th>Price per night</th>
            <th>Bed type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var room in Model)
        {
            <tr>
                <td>@room.Type</td>
                <td>@room.PricePerNight.ToString("N2")</td>
                <td>@room.BedType</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@room.Id">Edit</a>
                    <a asp-action="Delete" asp-route-id="@room.Id">Delete</a>
                    <a asp-controller="Booking" asp-action="Create" asp-route-id="@room.Id">Create Booking</a>
                </td>
            </tr>
        }
    </tbody>
</table>