@model List<Proiect_An.Models.Room>
@{
    ViewData["Title"] = "Rooms";
}

<div class="card custom-card shadow-sm rounded-3 mt-4 p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Available Rooms</h3>
        <a asp-action="Create" class="btn btn-neutral">+ Add New Room</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Type</th>
                    <th>Price per Night</th>
                    <th>Bed Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var room in Model)
                {
                    <tr>
                        <td>@room.Type</td>
                        <td>@room.PricePerNight.ToString("N2")</td>
                        <td>@room.BedType</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@room.Id" class="btn btn-sm btn-secondary me-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@room.Id" class="btn btn-sm btn-danger me-1">Delete</a>
                            <a asp-controller="Booking" asp-action="Create" asp-route-id="@room.Id" class="btn btn-sm btn-neutral">Create Booking</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
