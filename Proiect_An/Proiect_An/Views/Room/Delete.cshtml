@model Proiect_An.Models.Room
@{
    ViewData["Title"] = "Delete";
}

<div class="card custom-card shadow-sm rounded-3 mt-4 p-4">
    <div class="card-header custom-header">
        <h3>Delete This Room?</h3>
    </div>

    <div class="card-body">
        <dl class="row mb-4">
            <dt class="col-sm-3">Room Type</dt>
            <dd class="col-sm-9">@Model.Type</dd>

            <dt class="col-sm-3">Price per Night</dt>
            <dd class="col-sm-9">@Model.PricePerNight.ToString("C")</dd>

            <dt class="col-sm-3">Bed Type</dt>
            <dd class="col-sm-9">@Model.BedType</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
            <a asp-action="Index" class="btn btn-neutral ms-2">Cancel</a>
        </form>
    </div>
</div>
