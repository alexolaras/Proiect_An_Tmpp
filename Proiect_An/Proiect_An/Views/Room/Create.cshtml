@model Proiect_An.Models.Room

@{
    ViewData["Title"] = "Create Room";
}

<div class="container mt-5">
    <div class="card custom-card shadow-sm rounded-3">
        <div class="card-header custom-header">
            <h3 class="mb-0">Create a New Room</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Type" class="form-label">Room Type</label>
                    <input asp-for="Type" class="form-control" placeholder="e.g., Deluxe, Suite" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PricePerNight" class="form-label">Price per Night</label>
                    <input asp-for="PricePerNight" type="number" step="0.01" class="form-control" placeholder="e.g., 120.00" />
                    <span asp-validation-for="PricePerNight" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BedType" class="form-label">Bed Type</label>
                    <input asp-for="BedType" class="form-control" placeholder="e.g., King, Twin" />
                    <span asp-validation-for="BedType" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-neutral w-100">Create Room</button>
            </form>
        </div>
    </div>
</div>
