@model Proiect_An.Models.Guest
@{
    ViewData["Title"] = "Delete Guest";
}

<div class="card custom-card shadow-sm rounded-3 mt-4 p-4">
    <h2 class="mb-3 text-danger">Delete Guest</h2>
    <p class="mb-4">Are you sure you want to delete this guest?</p>

    <ul class="list-unstyled">
        <li><strong>Name:</strong> @Model.Name</li>
        <li><strong>Phone Number:</strong> @Model.PhoneNumber</li>
        <li><strong>Address:</strong> @Model.Address</li>
    </ul>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
