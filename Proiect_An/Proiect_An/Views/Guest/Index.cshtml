@model IEnumerable<Proiect_An.Models.Guest>
@{
    ViewData["Title"] = "All Guests";
}

<div class="d-flex justify-content-between align-items-center mt-4 mb-3">
    <h2>All Guests</h2>
    <a asp-action="Create" class="btn btn-outline-dark">Add New Guest</a>
</div>

<table class="table table-striped table-bordered shadow-sm rounded-2">
    <thead class="table-light">
        <tr>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th style="width: 160px;">Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var g in Model)
        {
            <tr>
                <td>@g.Name</td>
                <td>@g.PhoneNumber</td>
                <td>@g.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@g.Id" class="btn btn-sm btn-outline-primary me-2">Edit</a>
                    <a asp-action="Delete" asp-route-id="@g.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
