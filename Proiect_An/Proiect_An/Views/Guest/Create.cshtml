@model Proiect_An.Models.Guest
@{
    ViewData["Title"] = "Create Guest";
}

<div class="card custom-card shadow-sm rounded-3 mt-4 p-4">
    <h2 class="mb-3">Create Guest</h2>

    <form asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter guest name" />
        </div>

        <div class="form-group mb-3">
            <label for="PhoneNumber" class="form-label">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" placeholder="e.g. +373..." />
        </div>

        <div class="form-group mb-3">
            <label for="Address" class="form-label">Email Address</label>
            <input asp-for="Address" class="form-control" placeholder="Enter email" />
        </div>

        <button type="submit" class="btn btn-neutral">Create Guest</button>
    </form>
</div>
