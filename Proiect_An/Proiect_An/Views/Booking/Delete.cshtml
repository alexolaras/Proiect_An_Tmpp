@model Proiect_An.Models.Booking

<h2>Delete Booking</h2>
<p>Are you sure you want to delete this booking?</p>
<ul>
    <li>Guest: @Model.Guest?.Name</li>
    <li>Room ID: @Model.RoomId</li>
    <li>Check In: @Model.CheckIn.ToShortDateString()</li>
    <li>Check Out: @Model.CheckOut.ToShortDateString()</li>
</ul>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Delete</button>
    <a asp-action="Index">Cancel</a>
</form>
